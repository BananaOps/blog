<div class="projects-grid">
  <slot />
</div>

<style>
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin: 2rem 0;
    align-items: stretch;
  }

  @media (max-width: 1200px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .projects-grid :global(> *) {
    display: flex;
  }
</style>
